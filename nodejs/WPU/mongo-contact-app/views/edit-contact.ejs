<div class="container mt-3">
  <div class="row">
    <div class="col-mid 6">
      <h2>Form Ubah Data Contact</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact/update">
        <input type="hidden" name="oldNama" value="<%= (contact.oldNama || contact.nama) %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input type="text" class="form-control" id="nohp" name="noHP" value="<%= contact.noHP %>" required />
        </div>
        <a href="/contact/nama/<%= (contact.oldNama || contact.nama) %>" class="btn btn-info">Kembali</a>
        <button type="submit" class="btn btn-primary">Ubah Data Kontak</button>
      </form>
    </div>
  </div>
</div>
